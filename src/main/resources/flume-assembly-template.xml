<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>distribution</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <excludes>
        <exclude>*:sources</exclude>
      </excludes>
	  <outputDirectory>
	  		${parcelName}/${project.artifactId}/libext/
	  </outputDirectory>
    </dependencySet>
  </dependencySets>

	<fileSets>
		<fileSet>
			<directory>target/classes/templates/</directory>
			<includes>
				<include>*</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>${parcelName}/meta/</outputDirectory>
		</fileSet>

		<fileSet>
			<directory>target/classes/meta/</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>${parcelName}/meta/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>${parcelName}/${project.artifactId}/lib/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>

